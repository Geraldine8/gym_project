<div class="container">
  <form method="post" action="/gymclass">
    <div class="row">
      <div class="col-25">
        <label for="name">Name:</label>
      </div>
      <div class="col-75">
        <input id="name" type="text" name="name"/>
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="capacity">Capacity:</label>
      </div>
      <div class="col-75">
        <input id="capacity" type="number" name="capacity"/>
      </div>
    </div>
    <div class="row">
      <div class="col-25">
        <label for="timetable">Timetable:</label>
      </div>
      <div class="col-75">
        <input id="timetable" type="text" name="timetable"/>
      </div>
    </div>
    <div class="row">
      <input class="submit-button" type="submit" value="Save">
    </div>
  </form>
</div>
