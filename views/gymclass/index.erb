<div class="table-action">
  <a class="button" href="gymclass/new">Add class</a>
</div>
<table border="1">
  <tr>
    <th>Name</th>
    <th>Capacity</th>
    <th>Timetable</th>
    <th>Action</th>
  </tr>
  <% for gym_class in @classes%>
  <tr>
    <td><%= gym_class.name() %></td>
    <td><%= gym_class.capacity() %></td>
    <td><%= gym_class.timetable() %></td>
    <td>
      <a class="button-xs" href="/gymclass/<%= gym_class.id()%>/delete">Delete</a>
    </td>
  </tr>
  <% end %>
</table>
